@model Inventapp.Models.ProductoEnt

@{
    ViewBag.Title = "Insertar Producto Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Producto Nuevo</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @*<h4>Insertar Producto Nuevo</h4>*@
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Nombre:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.productoN, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.productoN, "", new { @class = "text-danger" })
        </div>
    </div>

    

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ingresar" />
            @*<input type="button" value="Verificar productos" onclick="location.href='@Url.Action("Comprobar", "Entrada")'" />*@
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Load","Entrada")
</div>
